<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<section>
  <h1>Edit the Game!</h1>
  <form action="/games/<%= game._id %>?_method=PUT" method="POST">
    <label>
      Name: 
      <input 
        type="text"
        name="name" 
        value="<%= game.name %>" 
        autocomplete="off"
      >
    </label>
    <label>
      Attended?
      <input 
        type="checkbox" 
        name="attended" 
				<%= game.attended ? "checked" : "" %> 
      >
    </label>
    <button type="submit">Edit the Game</button>
  </form>

</section>

